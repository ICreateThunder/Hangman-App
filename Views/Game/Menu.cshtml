@model Hangman_App.Models.GameMenuView;
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Hangman_App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Hangman_App.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex flex-column h-100" style="min-height:100vh;">
        <!-- HEADER BAR -->
        <div class="d-flex justify-content-between align-items-center w-100 h-auto">
            <h1>HANGMAN GAME</h1>
            <a asp-action="Logout" class="btn btn-primary"><span>Log out</span></a>
        </div>
        <!-- CONTENT TITLE -->
        <h1 class="h1">Welcome, User!</h1>
        <!-- MENU CONTENT -->
        <div class="d-flex justify-content-center align-items-center">
            <div class="container my-4">
                <div class="row">
                    <div class="col-6">
                        <ul>
                            <li>1</li>
                            <li>2</li>
                            <li>3</li>
                        </ul>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm">
                        <button class="btn btn-primary">Play</button>
                    </div>
                    <div class="col-sm">
                        <button class="btn btn-primary">Delete</button>
                    </div>
                    <div class="col-sm">
                        <button class="btn btn-primary">Create</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>